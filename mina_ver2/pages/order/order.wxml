<view class="page">
	<view class="page__hd">
		<wux-wing-blank size="default">
			<wux-card title="报名支付" extra="" thumb="../../image/支付.png">
				<view slot="body">
					<view style='flex-direction: row;flex-wrap: nowrap;justify-content: space-between;'>
						<font style="color: #0C60EE; padding-left: 35rpx;">吉他课程</font>

						<wux-cell title="课时量" hover-class="none">
							<wux-input-number default-value="1" min="{{ -5 }}" max="{{ 8 }}" slot="footer" />
						</wux-cell>
					</view>
				</view>
				<view slot="footer">
					
						<wux-icon type="logo-yen" color='red' />
						<font style="font-size: medium;">998</font>
					


				</view>
			</wux-card>
		</wux-wing-blank>
	</view>
	<view class="page__bd">
		<wux-cell-group title="输入你的个人信息以便我们通知你">

			<wux-cell hover-class="none">
				<wux-input label="qq号码" />
			</wux-cell>
			<wux-cell hover-class="none">
				<wux-input label="手机号" placeholder="请输入你的手机号码" />
			</wux-cell>
            <wux-cell hover-class="none">
				  <wux-button block type="positive">确认支付</wux-button>
			</wux-cell>
		</wux-cell-group>

	</view>
</view>

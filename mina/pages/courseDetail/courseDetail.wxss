@import "/wxParse/wxParse.wxss"
.list {
	font-size: 30rpx;
	padding: 10rpx;
  margin-bottom: 40rpx;
}
.list text {
	display: block;	
}
.list_content {
  display: flex;
  border: 1rpx,solid;
	text-indent: 2em;
	line-height: 26px;
  margin-top: 20rpx;
	margin-bottom: 2rpx;

}
.in-title{
  font-size: 40rpx;
  font-family: "微软雅黑";
  color:blue;
  line-height: 60rpx;
  padding-left:20rpx;
  border-left: 10rpx solid #4ec4c8;
  border-bottom: 1rpx solid #eeeeee;
}
.clear{
  display: flex;
  flex-direction: column;
  height:15rpx;
  width: 100%;
  background: #eeeeee;
}
.my_item_course{
  font-size: 10rpx;
}
image {
	height: 150px;
	width: 100%;
}
.list_course {
	margin-top: 10rpx;

}
.list_course text {
	margin: 5px 15rpx;
}

 .button_view {
   display: flex;
   flex-direction: row;
   flex-wrap: nowrap;

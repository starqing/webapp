  font-size: 2rpx;
}

.button_view button{
  display: flex;
  margin: 0rpx;
  width:33.3%;
  padding-left: 60rpx;
  text-align: center;
 font-size:35rpx;
 border-color:  rgba(200,200,200,0.5);
 padding-top:15rpx;
}
.list_share{
  padding-left:20rpx;
